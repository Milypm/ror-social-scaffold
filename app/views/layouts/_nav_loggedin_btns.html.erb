<% if current_user %>
  <div class="d-flex justify-content-between align-items-start" style="width: 19rem;">
    <h5 class="mt-1">Hi, <%= current_user.name %>!</h5>
    <%= link_to 'My Friends', friendships_path(current_user.id), class: 'mt-1' %>
    <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'mt-1' %>
  </div>
<% else %>
  <%= link_to 'Sign in', user_session_path %>
<% end %>