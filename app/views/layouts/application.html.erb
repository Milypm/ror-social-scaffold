<!DOCTYPE html>
<html>
  <head>
    <title>RorSocialScaffold</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/2bdc450678.js" crossorigin="anonymous"></script>
  </head>
  <body>
    <nav class="nav px-3">
      <div class="d-flex" style="width: 45rem;">
        <%= link_to 'Stay in touch', root_path %>
        <div class="menu">
          <div class="menu-item">
            <%= menu_link_to 'Timeline', posts_path %>
          </div>
          <div class="menu-item">
            <%= menu_link_to 'All users', users_path %>
          </div>
        </div>
      </div>
      <%= render 'layouts/nav_loggedin_btns' %>
    </nav>
    <% if notice.present? %>
      <div class="notice">
        <p> <%= notice %> </p>
      </div>
    <% end %>
    <% if alert.present? %>
      <div class="alert">
        <p> <%= alert %> </p>
      </div>
    <% end %>
    <main class="main">
      <%= yield %>
    </main>
  </body>
</html>
