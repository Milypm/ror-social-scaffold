<div class="border border-5 rounded-3 border-secondary py-3 px-4" style="width: 28rem;">
  <h3>Received Friend Requests</h3>
  <div class="d-flex flex-column mt-5">
    <% @pending_friend_requests.each do |friendship| %>
      <div class="d-flex justify-content-between pb-3 border-bottom border-success mb-3">
        <h5><%= User.find_by(id: friendship.user_id).name %></h5>
        <div class="d-flex justify-content-between" style="width: 15rem;">
          <%= link_to 'Ok!, accept', accept_friendship_path(:user_id => @user.id, :friend_id => current_user.id, :confirmed => true), method: :post, class: 'btn btn-success btn-sm' %>
          <%= link_to 'No thanks,  decline', friendship_path(:user_id => @user.id, :friend_id => current_user.id, :confirmed => false), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-secondary btn-sm' %>
        </div>
      </div>
    <% end %>
  </div>
</div>